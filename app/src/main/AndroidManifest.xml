<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sjeong.alarmcall">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    // 푸시알림
    <uses-permission android:name="android.permission.CALL_PHONE" />
    // 전화수신확인
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    // 전화기록
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    // 전화번호부권한
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    // 전화수신확인
    <uses-permission android:name="android.permission.VIBRATE" />
    // 진동 권한
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    // 뷰 권한
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    // 부팅 알람 권한
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ModeSetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HowToUseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".ScheduleSetActivity"
            android:screenOrientation="portrait" />

        <service android:name=".CallService" />

        <receiver android:name=".CallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".LaterCall"
            android:enabled="true"
            android:exported="true" />
        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="com.example.saran.realapplication.ALARM_START" />
            </intent-filter>
        </receiver>
        <receiver android:name=".AppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.sjeong.AlarmCall.CLICK" />
                <action android:name="com.example.sjeong.AlarmCall.CHANGE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info" />
        </receiver>
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".TestReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".BootTimeService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>