<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sjeong.alarmcall.ModeSetActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <EditText
            android:id="@+id/modename"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="즐겨찾기" />

            <TextView
                android:id="@+id/startxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center|right"/>

            <ImageButton
                android:id="@+id/star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/contact"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="즐겨찾기 외"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/contacttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center|right"/>

            <ImageButton
                android:id="@+id/contact"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_gravity="center"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/unknown"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="모르는 번호"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/unknowntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center|right"/>

            <ImageButton
                android:id="@+id/unknown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/timecount"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:text="긴급전화"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/timetxt"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="TIME"/>

            <Spinner
                android:id="@+id/timespinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/time"
                android:layout_gravity="center"
                android:layout_weight="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background">>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/counttxt"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="COUNT"/>

            <Spinner
                android:id="@+id/countspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/count"
                android:layout_gravity="center"
                android:layout_weight="5"/>/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="저장" />

            <Button
              android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
              android:text="삭제" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>