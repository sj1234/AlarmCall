<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.sjeong.alarmcall.HowToUseActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="HOW TO USE"
                android:textSize="24sp"
                android:textColor="#1b736d"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/set_text_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="모드"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"/>

            <ImageButton
                android:id="@+id/set_mode"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/select" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/set_text_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="스케줄"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"/>

            <ImageButton
                android:id="@+id/set_schedule"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/select" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/set_text_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="기타"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"/>

            <ImageButton
                android:id="@+id/set_etc"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/select" />
        </LinearLayout>

</LinearLayout>
